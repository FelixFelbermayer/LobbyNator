<h1><%= @lobby.name %></h1>
<p><%= @lobby.description %></p>

<p><%= @lobby.users.size %>/
<%= @lobby.maxplayers%> players joined this lobby</p>

<h2>Members:</h2>
<% if user_signed_in? %>

  <% @lobby.users.each do |lobby| %>
    <%= lobby.username %><br>
  <%end%>

<%= form_with model: @chatmessage, url: "/chatmessage" do |form| %>

  <%= form.hidden_field :lobby_id, value: @lobby.id%>

  <div class="field">
    <%= form.label :Chatmessage %>
    <%= form.text_area :text, size: "70x5" %>
  </div>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<% @lobby.chatmessages.each do |textObject| %>
    <%= textObject.text %>
    <% textMessage = textObject.created_at.strftime("%H:%M") %>
    <%= textMessage %><br>
  <%end%>

<% end %> 


<%= button_to 'Leave lobby', leave_path(:lobby => @lobby), method: :post, class: '_btn_header' %>



